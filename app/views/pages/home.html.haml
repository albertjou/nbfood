.jumbotron
  = form_tag root_path, :method => :get do
    = text_field_tag :search, params[:search]
    = select_tag :distance, options_for_select([['1 km',1],['2 km', 2],['5 km', 5]])
    = submit_tag "Search Nearby", :name => nil

- @meals.each do |meal|
  .col-md-3.meal
    %h1= link_to meal.name, meal_path(meal)
    %p= meal.image
    Cuisine:
    %p= meal.cuisine
    Price:
    %p= meal.price
    Servings remaining:
    %p= meal.servings
    By:
    %p= meal.user.username