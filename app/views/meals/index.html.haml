-  if @meals.length > 0
  - @meals.each do |meal|
    %ul
      %li= link_to meal.name, meal_path(meal)
      %li= meal.image
      %li
        Cuisine:
        = meal.cuisine
      %li
        Price:
        = meal.price
      %li
        Servings:
        = meal.servings
      %li
        By:
        = meal.user.username
- else
  %h1 Sorry you don't have any meals
  %h3= link_to('Create one now', new_meal_path)