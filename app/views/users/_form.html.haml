= form_for @user, :html => {:multipart => true}, :class => "form-control" do |f|
  %div.input-group
    - if !@user.id.nil?
      = f.label :username, :autofocus => true
      = f.text_field :username, :disabled => true, :class => "form-control"
    - else
      = f.label :username, :autofocus => true
      = f.text_field :username, :class => "form-control"
  %div.input-group
    = f.label :first_name
    = f.text_field :fname, :class => "form-control"
  %div.input-group
    = f.label :last_name
    = f.text_field :lname, :class => "form-control"
  %div.input-group
    = f.label :email
    = f.text_field :email, :class => "form-control"
  %div.input-group
    = f.label :phone
    = f.text_field :phone, :class => "form-control"
  %div.input-group
    = f.label :bio
    = f.text_area :bio, :class => "form-control", :rows => "5"
  %div.input-group
    = f.label :password
    = f.password_field :password, :class => "form-control"
  %div.input-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, :class => "form-control"
  %div.input-group
    = f.label :image
    = f.file_field :image

    = f.submit
